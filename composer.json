{
    "name": "angryshan/clickhouse-query",
    "description": "ClickHouse查询构建器，提供基于链式API的ClickHouse查询解决方案",
    "license": "MIT",
    "authors": [
        {
            "name": "angryshan",
            "email": "angryshan@qq.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "ClickHouseQuery\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.4"
    },
    "suggest": {
        "hyperf/db": "使用Hyperf框架时需要",
        "hyperf/utils": "使用Hyperf框架时需要",
        "topthink/framework": "使用ThinkPHP框架时需要"
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "cs-fix": "./vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "ClickHouseQuery\\ConfigProvider"
        },
        "think": {
            "config": {
                "clickhouse": "publish/clickhouse.php"
            }
        }
    }
} 